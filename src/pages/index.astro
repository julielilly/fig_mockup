---
import "../styles/global.css";

import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import BulletSection from "../components/BulletSection.astro";
import ScrollingContainer from "../components/ScrollingContainer.astro";
import DiagramSection from "../components/DiagramSection.astro";
import CoreValues from "../components/CoreValues.astro";
import Contact from "../components/Contact.astro";

const financialData = await fetch(
    "https://raw.githubusercontent.com/julielilly/frontend-design/main/resources/json/projections.json"
).then((res) => res.json());

const valueData = await fetch(
    "https://raw.githubusercontent.com/julielilly/frontend-design/main/resources/json/corevalues.json"
).then((res) => res.json());

---

<Layout title="AskExperts">

  <Hero/>
  <BulletSection keywordText="we'll work with you" backgroundColor="var(--primary-1)" textColor="var(--primary-3)" title="What To Expect" text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." beforeRight="auto" beforeLeft="calc(var(--image-offset) / -1)" afterRight="auto" afterLeft="calc(var(--image-offset) / -2)"/>
  <ScrollingContainer data={financialData}/>
  <DiagramSection keywordText="Experience" backgroundColor="var(--secondary-1)" textColor="var(--primary-3)" title="More than 25 years of experience" text="3000+ our clients are insured around the World"/>
	<CoreValues data={valueData} class="full-bleed"/>
  <Contact/>

  </Layout>
