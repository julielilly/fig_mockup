---
import SectionIntro from "../components/SectionIntro.astro";

const { keywordText, title, text, backgroundColor, textColor } = Astro.props;
---

<section>

    <div>
        <SectionIntro keywordText="Proccess" title="Contact Us. Itâ€™s Easy." text="Leverage agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative." backgroundColor="var(--primary-1)" textColor="var(--primary-3)"/>
        <div class="contact-info">
            <div class="contact">
                <img src="src/icons/call.svg" alt="call icon">
                <div>
                    <p>Call today</p>
                    <p>+1 800 100 900</p>
                </div>
            </div>
            <div class="contact">
                <img src="src/icons/hours.svg" alt="clock icon">
                <div>
                    <p>Monday To Friday</p>
                    <p>9AM - 5PM</p>
                </div>
            </div>
            <div class="contact">
                <img src="src/icons/location.svg" alt="location icon">
                <div>
                    <p>USA Office</p>
                    <p>195 Devonshire St Boston, MA 02110</p>
                </div>
            </div>
        </div>
    </div>

    <div class="collage">
        <img src="/images/contact-1.jpg" alt="woman sitting down">
        <img src="/images/contact-2.jpg"" alt="two women working together">
        <img src="/images/contact-3.jpg"" alt="two people talking">
    </div>

</section>

<style>
    @layer components {
        section {
            display: grid;
            grid-template-columns: 40ch auto;
            gap: var(--space-xl);
            padding-top: var(--space-5xl);

            .contact-info {
                display: flex;
                grid-template-columns: 3.25rem 1fr;
                flex-direction: column;
                gap: var(--space-l);
                

                .contact {
                    display: flex;
                    column-gap: var(--space-s);

                    img {
                        width: 3.25rem;
                    }
                }
            }

            .collage {
                display: grid;
                grid-template-columns: 1fr 1fr;
                grid-auto-rows: min-content;
                gap: var(--space-s);
                padding-top: var(--space-2xl);
                position: relative;
                z-index: 1;
               

                img:first-child {
                    grid-row: span 2;
                }

                img {
                    border-radius: var(--border-card);
                }

                &::before {
                    --square-count: 12;
                    --square-size: var(--step-2);
                    --_square-size: var(--square-size, 1rem);
                    --_square-half: calc(var(--square-size) / 2);
                    --_square-sum: calc(var(--square-count) * var(--square-size));
                    content: '';
                    position: absolute;
                    inset: 1.3rem -3.3rem auto auto ;
                    inline-size: calc( round( var(--_square-sum), var(--_square-size) ) - var(--_square-half) );
                    aspect-ratio: 1;
                    background: linear-gradient(135deg, #BE965D, #976F40, #C99B61, #F0BE7B , #FFCB85, #EEBC79, #C0935B, #976F40) 0 0 / 100% 100%;
                    mask:
                    var(--square-pattern) 0 0 / var(--_square-size) var(--_square-size),
                    var(--square-pattern) var(--_square-half) var(--_square-half) / var(--_square-size) var(--_square-size);
                    z-index: -2;
                }

                &::after {
                    content: '';
                    position: absolute;
                    inset: auto auto -0.8rem -2.5rem;
                    background: var(--primary-2);
                    width: 14.06rem;
                    height: 8.25rem;
                    border-radius: var(--border-card);
                    z-index: -1;
                }
             }
        }

        @media (width <= 870px) {
            section .collage {
                display: none;
            }
        }
    }
</style>